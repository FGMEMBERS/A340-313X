	<!-- Flight Director System -->
    <animation>
        <type>select</type>
        <object-name>FDRoll</object-name>
        <object-name>FDPitch</object-name>
        <condition>
			<property>/it-autoflight/fd_master</property>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDPitch</object-name>
        <property>/it-autoflight/fd/pitch-bar</property>
        <factor>0.0012</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>FDRoll</object-name>
        <property>/it-autoflight/fd/roll-bar</property>
        <factor>0.0007</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
 
 
    <animation>
        <type>translate</type>
        <object-name>sidestick-pos</object-name>
        <property>controls/flight/elevator</property>
        <factor>0.0218</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>sidestick-pos</object-name>
        <property>controls/flight/aileron</property>
        <factor>0.0220</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>


