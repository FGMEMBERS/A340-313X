						</equals>
					</or>
				</and>
			</condition>
		</enable>
		<input>
			<value>0</value>
		</input>
		<reference>
			<value>1</value>
		</reference>
		<output>
			<property>/it-autoflight/internal/elevator-trim-cmd</property>
		</output>
		<config>
			<Kp>0.08</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
