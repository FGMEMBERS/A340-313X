	<filter>
		<name>Throttle 1</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<less-than>
					<property>/controls/engines/engine[0]/throttle-lever</property>
					<value>0.80</value>
				</less-than>
			</condition>
		</enable>
		<input>
			<condition>
				<less-than>
					<property>/controls/engines/engine[0]/throttle-lever</property>
					<value>0.60</value>
				</less-than>
			</condition>
			<property>/controls/engines/engine[0]/throttle-man</property>
		</input>
		<input>
			<condition>
				<and>
					<greater-than-equals>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.60</value>
					</greater-than-equals>
					<less-than>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.80</value>
					</less-than>
				</and>
			</condition>
			<property>/controls/flight/throttle-cmd</property>
		</input>
		<output>
			<property>/controls/engines/engine[0]/throttle-fdm</property>
		</output>
		<type>noise-spike</type>
		<max-rate-of-change>
			<condition>
				<and>
					<greater-than-equals>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.60</value>
					</greater-than-equals>
					<less-than>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.80</value>
					</less-than>
					<equals>
						<property>/it-autoflight/apthrmode2</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/retard</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.40</value>
		</max-rate-of-change>
		<max-rate-of-change>
			<condition>
				<and>
					<greater-than-equals>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.60</value>
					</greater-than-equals>
					<less-than>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.80</value>
					</less-than>
					<not-equals>
						<property>/it-autoflight/apthrmode2</property>
						<value>0</value>
					</not-equals>
					<equals>
						<property>/it-autoflight/retard</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.05</value>
		</max-rate-of-change>
		<max-rate-of-change>
			<condition>
				<and>
					<greater-than-equals>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.60</value>
					</greater-than-equals>
					<less-than>
						<property>/controls/engines/engine[0]/throttle-lever</property>
						<value>0.80</value>
					</less-than>
					<equals>
						<property>/it-autoflight/retard</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
			<value>0.20</value>
		</max-rate-of-change>
		<max-rate-of-change>
			<condition>
				<less-than>
					<property>/controls/engines/engine[0]/throttle-lever</property>
					<value>0.60</value>
				</less-than>
			</condition>
			<value>1</value>
		</max-rate-of-change>
	</filter>
	
