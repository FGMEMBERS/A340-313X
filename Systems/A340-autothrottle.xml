<?xml version="1.0"?>

<!--
 auto-thrust modes:
 mode     /instrumentation/afds/inputs/autothrottle-index
 OFF      0
 THR      1
 THR REF  2
 HOLD     3
 IDLE     4
 SPD      5
 -->

