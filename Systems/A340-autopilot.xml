    </output>
    <config>
      <Kp>0.3</Kp>
      <Ki>0.0</Ki>
      <u_min>
        <value>-16.67</value>
      </u_min>
      <u_max>
        <value>33.33</value>
      </u_max>
    </config>
   </pi-simple-controller>

